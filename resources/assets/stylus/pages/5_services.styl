.services-list
  padding 0 em(22px)
  display flex
  flex-wrap wrap
  justify-content space-around
  max-width 960px

.service-item
  width 100%
  font-family 'Raleway'
  font-size 14px
  margin-bottom 22px
  +media(760px)
    width 49%
  +m('blue')
    background-color #6185BB
  +m('cian')
    background-color #6B999A

  .btn
    margin auto
    display block
    max-width 175px
    text-align center
.service-item-line
  border 0
  background none
  border-bottom 1px dashed white
  margin-bottom 22px
.service-item-head
  size 100% 150px
  img
    size 100%
    object-fit cover
.service-item-content
  padding em(22px)
  color white
.service-item-title
  font-family 'Neusa Medium'
  font-size 125%
  margin-bottom em(12px)
  b
    font-family 'Neusa Semibold'
.service-item-text
  line-height 1.3
  margin-bottom 22px
  b
    font-weight 600
.service-item-list
  list-style none
  margin 0 0 22px
  li
    size 100% auto
    position relative
    padding 8px 0
    border-bottom 1px dashed white
    a
      display flex
      justify-content  space-between
      align-items center
      line-height  1.5
      svg
        size 10px
        fill white

.featured-content
  display flex
  flex-direction column
  margin-bottom 22px
  hr
    margin 22px 0
  +media(700px)
    flex-direction row
  +media(1366px)
    height 400px
  +m('dark')
    background-color #808080
  +m('blue')
    background-color #6185BB
    .featured-content-image
      order 2
  .featured-content-image
    size 100% 300px
    +media(700px)
      height auto
      width 50%
    img
      size 100%
      display block
      object-fit cover
      object-position top center
  .featured-content-text
    padding 22px
    color white
    +media(700px)
      width 50%
      display flex
      flex-direction column
      justify-content center
      .service-item-title
        font-size 175%
