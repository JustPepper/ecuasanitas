@import 'booo'

flex-center()
	display flex
	justify-content center
	align-items center
	
media(size)
	@media screen and (min-width: size)
		{block}

use-reset()
use-box-sizing-reset()
use-animate({ _fadeInUp: true })


/* Colors */
$blue = #1878be
$cian = #3CAAAB
$black = #4f4f4f

/* Fonts */
font-face('../fonts/neusa_medium-webfont', 'Neusa Medium')
font-face('../fonts/neusa_semibold-webfont', 'Neusa Semibold')


/* Global styles */

body
	font-family Neusa Medium
	color $black
	transition all 250ms ease-in-out

.translate-body
	transform translate(-250px, 0)

svg#svg
	display none

.flex-container
	width 100%
	max-width 1080px
	margin auto
	display flex

a
	text-decoration none
	color inherit

.grid
	display flex
	flex-direction column
	+media(760px)
		flex-direction row
	.col
		flex 1

.section
	padding em(60px) 0
	
.section-big-title
.section-subtitle
.section-small-title
.section-text
.section-title
	line-height 1.3

.section-title
	font-size em(22px)
	color #808080
	b
		font-family Neusa Semibold

.section-big-title
	font-family Neusa Semibold
	font-size em(22px)
	+media(1080px)
		font-size em(32px)

.section-subtitle
	font-family 'Raleway', sans-serif
	color #808080
	font-size em(18px)
	b
		font-weight 700

.section-small-title
	color $blue
	font-size em(20px)
	b
		font-family Neusa Semibold

.section-text
	font-family 'Raleway', sans-serif
	
.line
	size 100% 1px
	border 0
	background-color white
	
.with-pattern
	position absolute
	size 100%
	display block
	top 0
	left 0
	background-image url('../images/back-pattern.png')
	background-repeat repeat
	z-index -1
	opacity .3

/* Modules */
.btn
	padding em(7px) em(22px)
	border 1px solid transparent
	border-radius em(27px)
	display inline-block
	+m('blue')
		background-color $blue
		color white
	+m('border')
		border-color white
	+m('cian')
		background-color $cian
		color white
	+m('border-cian')
		color $cian
		border-color $cian

/* Layout styles */

.overlay-on-small
	size 100%
	background-color rgba(#333, .4)
	position fixed
	top 0
	left 0
	z-index 998
	display none

.header
	.top-nav
		display flex
		justify-content space-between
		padding em(23px)
		+media(960px)
			size 100% 90px
			padding 0 em(23px)
		.top-nav-logo
			flex-center()
			img
				size auto 40px
		.top-nav-responsive
			size 50px
			flex-center()
			z-index 9999
			+media(960px)
				display none
			svg
				size 32px
				fill $blue
		.top-nav-menu
			display block
			position fixed
			top 0
			right 0
			size 250px 100%
			background-color $blue
			transform translate(250px, 0)
			z-index 999
			box-shadow -1px 0 3px rgba($black, .4)
			+media(1080px)
				display block
				position relative
				size auto
				transform translate(0,0)
				background none
				box-shadow none
				ul
					display flex
					height 100%
					li
						ul
							display flex
							visibility hidden
							opacity 0
			ul
				li
					flex-direction column
					align-items flex-start
					display flex
					color white
					+media(1080px)
						color $black
					a
						line-height 50px
						display block
						padding 0 em(22px)
			.list-item
				+media(1080px)
					flex-center()
					position relative
					&:hover
						color $blue
				&:hover
					.sub-nav
						display flex
						+media(1080px)
							visibility visible
							opacity 1
			
			.btn
				border-color white
				line-height 2
				margin auto
				display inline-block
			
		.sub-nav
			background-color #6195CB
			display none
			flex-direction column
			width 100%
			transition all 150ms ease
			+media(1080px)
				left 0
				top 100%
				position absolute
				background-color white
				width auto
				height auto !important
				border-top 3px solid $blue
				li
					position relative
					padding 0
					a
						display block
						width 100%
						white-space: nowrap
						&:hover
							color $blue
.bottom-nav
	border-top 3px solid $blue
	background-color #6195CB
	color white
	padding em(16px) em(22px)
	font-size em(14px)
	+media(960px)
		font-size em(16px)
	.flex-container
		flex-direction column
		+media(768px)
			flex-direction row
			align-items center
			justify-content space-around
		+media(960px)
			justify-content space-between
	.bottom-nav-info
		font-family Neusa Semibold
		display flex
		justify-content space-between
		margin em(14px) 0 0 0
		letter-spacing .5px
		+media(768px)
			margin 0
			span:first-child
				border-right 2px solid white
				margin-right 1rem
				padding-right 1rem
	.bottom-nav-search
		display none
		+media(960px)
			display block
			label
				position relative
				input
					outline 0
				svg
					position absolute
					right 12px
					top 3px
					size 16px
					fill $blue

.footer
	padding em(40px)
	padding-bottom 0
	font-family 'Raleway', sans-serif
	background-image url('../images/ecuasanitas-iso.svg')
	background-position 90% top
	background-repeat no-repeat
	background-size contain
	+media(1080px)
		padding-bottom em(20px)
	.flex-container
		flex-wrap wrap
		@media screen and (max-width: 375px)
			flex-direction column
			padding-bottom em(40px)
	.footer-nav-item
		size 50% auto
		@media screen and (max-width: 375px)
			width 100%
		+media(760px)
			width (100 / 3)%
		+media(1080px)
			width (100 / 5)%
		.footer-nav-title
			color $blue
			margin-bottom em(22px)
			display block
			+media(960px)
				margin-bottom em(16px)
			b
				font-weight 700
		ul
			margin-bottom em(22px)
			li
				line-height 1.5
				+media(960px)
					font-size 14px
		.footer-nav-icons
			display flex
			li
				a
					margin-right em(8px)
					circle 30px
					flex-center()
					background-color #DDDDDD
					svg
						size 16px
						fill white

.copyright
	background-color $blue
	color white
	font-size em(14px)
	text-align center
	padding em(22px) 0
	

