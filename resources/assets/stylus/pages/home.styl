/* Slider */
.slider-wrapper
	size 100% auto
	.slider
		size 100% 350px
		position relative
		+media(760px)
			height 450px
		.slider-item
			size 100%
			img
				size 100%
				object-fit cover
				position absolute
				top 0
				left 0
				z-index -1
				display block
			.flex-container
				size 100%
				display flex
				justify-content center
				align-items flex-end
				padding em(20px) em(40px)
				z-index 500
				+media(760px)
					justify-content flex-start
					padding 0 0 5% 5%
				+media(1080px)
					padding 0 0 5% 0
				.slider-item-content
					background-color rgba(white, .2)
					size 100% auto
					padding em(14px) em(32px)
					color white
					display flex
					flex-direction column
					justify-content space-between
					align-items flex-start
					.btn
						margin-top em(8px)
					+media(760px)
						max-height 150px
						width 50%
						justify-content space-around
						.section-big-title
							font-size em(24px)
							max-width 90%
							line-height 1.2
					+media(960px)
						.section-big-title
							font-size em(28px)
	.slider-footer
		background-color #DDDDDD
		display flex
		justify-content space-around
		padding em(8px) 0
		max-width 960px
		position relative
		z-index 9999
		@media screen and (max-width: 375px)
			flex-direction column
			padding-left em(22px)
		+media(960px)
			top -1em
			margin 0 auto
		a
			display flex
			max-width 140px
			align-items center
			font-size 14px
			line-height 1.3
			svg
				size 40px
				fill $blue
				margin-right 12px


.section-affiliates
	+media(1080px)
		.flex-container
			padding-left em(60px)
			padding-right em(60px)
	.section-big-title
		color $blue
	.section-subtitle
		margin em(16px) 0 em(28px) 0
	.section-small-title
		margin-bottom em(14px)
	.grid
		.col
			padding em(20px) em(40px) 0 em(40px)
			+media(960px)
				padding 0
			ul
				color $blue
				font-family 'Raleway', sans-serif
				font-size em(14px)
				li
					line-height 2
					&:before
						content '+'
						color $blue
						font-size em(18px)
						padding-right em(8px)
			&:last-child
				align-self flex-end
				+media(960px)
					padding-left em(40px)
			&:first-child
				+media(960px)
					padding-right em(40px)
.download-app
	text-align center
	background-color $blue
	+media(760px)
		text-align left
	.section-subtitle
	.col
		color white
	.grid
		padding em(40px)
		+media(760px)
			height 350px
			padding 0
			padding-left em(22px)
		+media(960px)
			height 450px
			padding-left 0
	.col
		.section-subtitle
			color white
			font-family 'Raleway', sans-serif
		img
			display none
			+media(760px)
				display block
				size auto 110%
		.btn
			margin-top em(20px)
			padding em(7px) em(32px)
		&:first-child
			align-self center
			+media(960px)
				padding-left em(22px)
			+media(1100px)
				padding-left 0
	.line
		margin em(22px) 0
	.download-app-footer
		padding em(20px) em(14px)
		background-color white
		.flex-container
			align-items center
		.section-subtitle
			color $black
			font-size em(14px)
			text-align left
			flex 1
		svg
			fill $blue
			size 35px
			margin-right em(20px)
			
.section-plans
	background-color #DDDDDD
	size 100% auto
	+media(760px)
		height 350px
	+media(960px)
		height 350px
		padding 0
	.section-big-title
		color $cian
	.grid
		height 100%
		.col
			height 100%
			display flex
			padding 0 em(40px)
			&:first-child
				+media(960px)
					align-items flex-end
					justify-content flex-end
			&:last-child
				flex-direction column
				align-items flex-start
				justify-content center
				+media(960px)
					padding-right 10%  
			img
				display none
				size auto 90%
				object-fit cover				
				+media(760px)
					size 100% auto
					display block
				+media(1200px)
					size auto 90%
			.section-text
				margin em(22px) 0
			.btn
				font-family 'Raleway', sans-serif
			.plans-list
				display flex
				margin em(22px) 0 0 0
				@media screen and (max-width: 375px)
					flex-direction column
					align-items flex-start
				li 
					font-family Neusa Semibold
					color #808080
					display flex
					justify-content center
					align-items flex-start
					flex 1
					line-height 1.3
					font-size em(14px)
					svg
						fill #808080
						size 40px
						margin-right em(12px)
						flex-center()

.section-news
	display flex
	flex-direction column
	.grid
		align-items center
		+media(960px)
			height 300px
			.col
				flex 0 1 auto
				width 50%
		&:last-child
			.news-image
				+media(760px)
					order 2
			.news-text
				align-items flex-end
	.news-image
		size 100% 200px
		+media(760px)
			height 100%
		img
			size 100%
			display block
			object-fit cover
	.news-text
		padding em(40px)
		+media(960px)
			display flex
			flex-direction column
			justify-content center
			align-items flex-start
			div
				max-width 500px
		.section-subtitle
			margin-bottom em(22px)
		.read-more
			margin-top em(22px)
			display inline-block
			color #6BA9AA
			font-family 'Raleway', sans-serif
			font-style italic
			border-top 1px solid #6BA9AA
			padding-top em(8px)
			font-size 14px

