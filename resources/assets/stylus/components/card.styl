.cards-grid
  display flex
  flex-wrap wrap
  overflow hidden

.card
  background-color #EFEFEF
  font-family 'Raleway'
  transition all 350ms ease
  visibility hidden
  opacity 0
  padding 0
  margin 0
  position absolute
  transform translate(100%, 0)
  &:hover
    background-color #6185BB
    .card-title
    .card-text
      color white
  +m('active')
    visibility visible
    size auto
    position static
    opacity 1
    margin-bottom 2%
    padding em(22px)
    transform translate(0,0)
    +media(600px)
      width calc(50% - 2%)
      margin 1%
    +media(960px)
      width calc(33% - 2%)
    +media(1200px)
      margin 0
      margin-right 1%
      margin-bottom 1%
  .card-title
    color #1879BF
    margin-bottom em(22px)
    b
      font-weight 600
  .card-text
    font-size 14px
    line-height 1.3
    b
      font-weight 600
